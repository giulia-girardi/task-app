<div class="app">
    <%- include('./partials/navbar.ejs') %>
    <div class="pagecontent">
        <div class="tabtitle">
            <h2>Dashboard</h2>
            <a href="/tasks/create" id="createtaskbutton">Create a task</a>
        </div>
        <div class="tabpage">
                <h2>Tasks due today:</h2>
            <div class="task inlinecheck">
                <div>
                    <% tasksDueToday.forEach(task => { %>
                        <div class="dashboard-task">
                             <form action="/dashboard/<%= task.id  %>/done" method="POST">
                            <button class="complete-btn" type="submit" name="taskCompleted"></button>
                            </form>
                            <p class="dashboard-task-name"><%= task.taskName %> </p>
                        </div>
                    <% }) %>
                </div>
                <div>
                    <% sharedTasksDue.forEach(task => { %>
                        <div class="dashboard-task">
                             <form action="/dashboard/<%= task.id  %>/done" method="POST">
                            <button class="complete-btn" type="submit" name="taskCompleted"></button>
                            </form>
                            <p class="dashboard-task-name"><%= task.taskName %> </p>
                        </div>
                        <% }) %>
                </div>
                <div class="alltasks">
                    <a class="viewalllink" href="/tasks">View all tasks</a>
                </div>
            </div>
        </div>
    </div>
</div>
